<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_marginLeft="@dimen/spacing_20"
    android:background="@drawable/balloon_outgoing_normal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/spacing_5"
    android:paddingTop="@dimen/spacing_5">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_image_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/spacing_5"
            android:layout_marginEnd="@dimen/spacing_10"
            android:layout_marginRight="@dimen/spacing_10"
            android:src="@drawable/ic_chat"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/spacing_8"
            android:paddingTop="@dimen/spacing_5"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="@dimen/font_size_16"
            android:textStyle="bold"
            tools:text="User1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/user_message_tv"
        style="@style/chat_text_message_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Rahul Agrawal is a good boy but he does not know what he wants."/>

    <TextView
        android:id="@+id/time_tv"
        style="@style/chat_timings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/spacing_2"
        android:layout_marginRight="@dimen/spacing_10"
        android:paddingBottom="@dimen/spacing_5"
        android:paddingRight="@dimen/spacing_20"
        android:textColor="@android:color/darker_gray"
        tools:text="17:10"/>

</LinearLayout>