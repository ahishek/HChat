<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools"
                android:paddingBottom="@dimen/spacing_5"
                android:paddingTop="@dimen/spacing_5">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_10"
        android:background="@drawable/balloon_incoming_normal">

        <LinearLayout
            android:id="@+id/other_reply_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                <ImageView
                    android:id="@+id/other_image_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_5"
                    android:layout_marginLeft="@dimen/spacing_10"
                    android:src="@drawable/ic_chat"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/other_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/spacing_10"
                    tools:text="User1"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="@dimen/font_size_16"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:id="@+id/other_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/chat_text_message_style"
                tools:text="Rahul Agrawal is a good boy but he does not know what he wants." />

            <TextView
                android:id="@+id/time_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/spacing_10"
                android:layout_gravity="right"
                style="@style/chat_timings"
                android:paddingRight="@dimen/spacing_10"
                android:textColor="@android:color/darker_gray"
                android:paddingBottom="@dimen/spacing_5"
                tools:text="17:10" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>